<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos ent√£o abaixo</p>

      <%- include('includes/messages'); %>

      <div class="responsive-table">
        <table class="table my-5">
          <% if (contacts.length < 1) { %>
            <h1 class="text-center my-5">
              Nenhum Contato Encontrado
              <p><a href="/contato/index" class="text-center">Cadastrar um Contato</a></p>
            </h1>
          <% } %>

          <% contacts.forEach(contact => { %>
          <tr>
            <td><%= contact.firstname %></td>
            <td><%= contact.lastname %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.email %></td>
            <td>
              <a href="/contato/index/<%=contact._id%>" style="text-decoration: none;">
                <i class="fa-solid fa-pen"></i> Editar
              </a>
            </td>
            <td>
              <a href="/contato/delete/<%=contact._id%>" style="color: #ee4f4f; text-decoration: none;">
                <i class="fa-solid fa-trash"></i> Deletar
              </a>
            </td>
          </tr>
          <% }); %>
        </table>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>