<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container" style="max-width: 64rem; margin: 3rem auto;">
  <div class="row">
    <div class="col-lg-2"></div>

    <% if(!user) { %>
    <div class="col-lg-8 text-center">
      <h1 class="text-center">Criar Conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>
      
      <%- include('includes/messages'); %>

      <div class="row my-5"> 
        <div class="col-lg">
          Faça seu Cadastro
          <p><small>Criar uma Nova Conta.</small></p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group" style="text-align: left;">
              <label>Seu Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group" style="text-align: left;">
                <label>Sua Senha</label>
                <input type="password" class="form-control" name="password">
              </div>
            <button type="submit" class="btn btn-primary my-3">Criar Conta</button>
          </form>
        </div>

        <div class="col-lg">
          Faça o Login
          <p><small>Já tenho uma Conta.</small></p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group" style="text-align: left;">
              <label>Seu Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group" style="text-align: left;">
                <label>Sua Senha</label>
                <input type="password" class="form-control" name="password">
              </div>
            <button type="submit" class="btn btn-primary my-3">Fazer Login</button>
          </form>
        </div>
        </div>
      </div>

    </div>
    <% } else { %>
      <div class="col-lg-8 text-center">
        <h1>Usuário já Logado</h1>
      </div>
    <% } %>
  </div>
</div>

<%- include('includes/footer'); %>